  <div class="main_chat_content">
    <div class="main_chat_wrapper">
      <div class="main_chat_author_name">
        <%= message.user.name %>
      </div>
      <div class="main_chat_date">
        <%= l message.created_at %>
      </div>
    </div>
    <div class="main_chat_text">
      <%= message.content %>
    </div>
    <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %>
  </div>